@{ ViewData["Title"] = "Login"; }

<div class="container">
    <div class="row">
        <div class="col s12 m12">
            <div class="card-panel">
                <form asp-action="Login" asp-controller="Autenticacao">
                    <div class="row center-align">
                        <img width="150" src="https://image.flaticon.com/icons/svg/149/149077.svg">
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input name="email" placeholder="usuario@exemplo.com" id="Email" type="email" class="validate">
                            <label for="Email">Email</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <input name="senha" placeholder="senha" id="Senha" type="password" class="validate">
                            <label for="Senha">Senha</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col offset-m7 m3">
                            <a class="light-blue accent-4 btn waves-effect waves-light right" asp-action="Cadastro" asp-controller="Autenticacao">Primeiro acesso</a>
                        </div>
                        <div class="col m2">
                            <button class="btn waves-effect waves-light light-blue accent-4" type="submit" name="logar">Logar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    var email = document.getElementById("Email");

    if ('@ViewBag.email' != "") {
        email.value = '@ViewBag.email';
        mensagemDeErro();
    }

    function mensagemDeErro() {
        M.toast({
            html: 'Email ou senha inválidos!!',
            displayLength: 8000,
            inDuration:2000
        });
    }
</script>